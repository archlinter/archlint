{
  "name": "archlint",
  "version": "0.1.0",
  "private": true,
  "description": "Fast architecture smell detector for TypeScript/JavaScript",
  "license": "MIT",
  "author": "fixcik",
  "repository": {
    "type": "git",
    "url": "https://github.com/archlinter/archlint"
  },
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "build:rust": "cargo build --release --workspace",
    "build:napi": "cd crates/archlint-napi && napi build --release",
    "test": "pnpm -r test",
    "test:rust": "cargo test --workspace",
    "lint": "pnpm -r lint && eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "simple-git-hooks",
    "clean": "pnpm -r clean && cargo clean",
    "copy-bins": "node scripts/copy-binaries.cjs",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.17.0",
    "nano-staged": "^0.8.0",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.0",
    "simple-git-hooks": "^2.12.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.51.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged",
    "commit-msg": "npx commitlint --edit ${1}"
  },
  "nano-staged": {
    "*.{ts,js,json,md,yml,yaml}": "prettier --write",
    "*.{ts,js}": "eslint --fix"
  }
}