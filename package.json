{
  "name": "archlint",
  "version": "0.6.0",
  "private": true,
  "description": "Fast architecture smell detector for TypeScript/JavaScript",
  "license": "MIT",
  "author": "fixcik",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/archlinter/archlint.git"
  },
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "build:rust": "cargo build --release --workspace",
    "build:napi": "cd crates/archlint-napi && napi build --release",
    "test": "pnpm test:node && pnpm test:rust",
    "test:node": "vitest run",
    "test:rust": "cargo test --workspace",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fmt": "cargo fmt",
    "clippy": "cargo clippy --workspace --all-targets --all-features -- -D warnings",
    "clippy:lib": "cargo clippy --workspace --all-targets --no-default-features -- -D warnings",
    "clippy:fix": "cargo clippy --workspace --all-targets --all-features --allow-dirty --fix -- -D warnings",
    "prepare": "simple-git-hooks",
    "clean": "pnpm -r clean && cargo clean",
    "copy-bins": "node scripts/copy-binaries.cjs",
    "sync-versions": "node scripts/sync-versions.cjs"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.17.0",
    "nano-staged": "^0.8.0",
    "prettier": "^3.4.2",
    "semantic-release": "^24.0.0",
    "simple-git-hooks": "^2.12.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^1.4.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged",
    "commit-msg": "npx commitlint --edit ${1}"
  },
  "nano-staged": {
    "*.{ts,js,cjs,mjs}": "eslint --fix",
    "*.{ts,js,cjs,mjs,json,md,yml,yaml}": "prettier --write",
    ".prettierrc": "prettier --write",
    "*.rs": [
      "bash -c 'pnpm clippy'",
      "bash -c 'pnpm clippy:lib'",
      "bash -c 'pnpm fmt'"
    ]
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0"
    }
  }
}
