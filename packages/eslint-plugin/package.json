{
  "name": "@archlinter/eslint-plugin",
  "version": "0.13.0",
  "description": "ESLint plugin for architectural smell detection",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/archlinter/archlint.git",
    "directory": "packages/eslint-plugin"
  },
  "homepage": "https://archlinter.github.io/archlint/integrations/eslint.html",
  "bugs": {
    "url": "https://github.com/archlinter/archlint/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm typecheck"
  },
  "dependencies": {
    "@archlinter/core": "workspace:*",
    "xxhash-wasm": "^1.1.0"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.17.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=18"
  }
}
