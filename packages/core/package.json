{
  "name": "@archlinter/core",
  "version": "0.4.1",
  "description": "Core library for archlint - programmatic API",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/archlinter/archlint.git",
    "directory": "packages/core"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ],
  "napi": {
    "name": "archlint",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "aarch64-apple-darwin"
      ]
    }
  },
  "optionalDependencies": {
    "@archlinter/core-darwin-arm64": "workspace:*",
    "@archlinter/core-darwin-x64": "workspace:*",
    "@archlinter/core-linux-x64-gnu": "workspace:*",
    "@archlinter/core-linux-x64-musl": "workspace:*",
    "@archlinter/core-linux-arm64-gnu": "workspace:*",
    "@archlinter/core-win32-x64": "workspace:*"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "napi build --release --platform --cargo-cwd ../../crates/archlint-napi .",
    "build:debug": "napi build --platform --cargo-cwd ../../crates/archlint-napi .",
    "test": "vitest run",
    "prepublishOnly": "napi prepublish -t npm"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  }
}
